	public string country = "India";
	public string Fname1 = "Hemalatha";
	public string Lname1 = "N S";
	public string Email1 = "hema@gmail.com";
	public string Phonenumber1 = "8754357876";
	public string Address11 = "6/83 Airport road";
	public string Address21 = "cbe road";
	public string city1 = "Coimbatore";
	public string pincode1 = "641017";
	public string state1 = "TamilNadu";
	

	profileform obj = new profileform();
	public bool readone = true;
	void edit()
	{
		readone = false;
	}
	void save()
	{
		if (readone == false)
		{
			readone = true;
			Snackbar.Add("Profile Updated.", Severity.Success);
		}
	}
	IList<IBrowserFile> files = new List<IBrowserFile>();
	private void UploadFiles(IBrowserFile file)
	{
		files.Add(file);
