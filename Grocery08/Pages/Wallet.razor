@code {

	private string addmoney = "1000";
	public string paymentchoosen { get; set; }
	@code {
		radiobutton obj = new radiobutton();
		public string c;
		public string d;
		void reset()
		{
			if (paymentchoosen == "Radio1" && addmoney != "")
			{
				NavigationManager.NavigateTo("/Instamojo");
			}
			else if (paymentchoosen == "Radio2" && addmoney != "")
			{
				NavigationManager.NavigateTo("/Razorpay");
			}
			else
			{
				
				Snackbar.Add("Choose any Payment path", Severity.Error);
			}
		

		}
	}

}
