							</MudItem>
						
							</MudContainer>
					</MudItem>
				</MudGrid>
				<MudGrid>
					<MudItem lg="12" sm="12" xs="11" md="12">
						<MudContainer>
						<MudForm>
							 <MudRadioGroup @bind-SelectedOption="@paymentchoosen">
                                    <MudRadio Color="Color.Warning" Value="@("Radio1")"><MudImage Class="paymentimagesize" Src="/img/pgw/instamojo2.png" /></MudRadio>
										<MudRadio Style="margin-left:3px;" Color="Color.Warning" Value="@("Radio2")" ><MudImage Class="paymentimagesize" Src="/img/pgw/razorpay.png" /></MudRadio>
			          </MudRadioGroup>
						</MudForm>
							</MudContainer>
					</MudItem>
				</MudGrid>
					<MudContainer>
						<MudDivider />
					</MudContainer>
					<br />
					<MudGrid>
						<MudItem lg="4" sm="8" xs="2" md="4"></MudItem>
						<MudItem lg="4" sm="4" xs="8" md="6" Class="d-flex justify-content-center">
						<MudButton Variant="Variant.Filled" Class="btn-right" OnClick="reset">ADD MONEY</MudButton>
							
							</MudItem>
						<MudItem lg="4" sm="8" xs="2" md="4"></MudItem>

					</MudGrid>

					<br />
			
				
			
		
			</MudPaper>
		</MudItem>
		<MudItem lg="2"></MudItem>
    </MudGrid>
</MudContainer>
