								<MudToggleItem Value="@("1000")" Text="1000" />
								<MudToggleItem Value="@("2000")" Text="2000" />
								<MudToggleItem Value="@("3000")" Text="3000" />
								<MudToggleItem Value="@("4000")" Text="4000" />
